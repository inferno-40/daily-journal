<%- include('partials/header') %>

<body>
    <h1>Home</h1>
    <p><%= data %></p> 

    <% for(let i=0; i<posts.length; i++){ %>
        <h1><%= posts[i].title %></h1>
        <% let content = posts[i].post.substring(0,Math.min(posts[i].post.length,100)) + ' ...' %>
        <% let url = '/posts/'+posts[i].title %>  
        
        <p><%= content %> <a href="<%= url %> ">Read More</a> </p>
        
    <% } %>  
</body>

<%- include('partials/footer') %>  